{
  "name": "esp-idf-dev",
  "build": { "dockerfile": "Dockerfile" },
  "workspaceFolder": "/work",
  "workspaceMount": "source=${localWorkspaceFolder},target=/work,type=bind",
  "runArgs": [
    "--privileged",
    "--network=host"
  ],
  "mounts": [
  "source=esp-idf-tools,target=/root/.espressif,type=volume",
  "source=arduino-cli-data,target=/root/.arduino15,type=volume"
  ],
  "containerEnv": {
    "IDF_PATH": "/opt/esp/idf"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "espressif.esp-idf-extension",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ]
    }
  }
}
